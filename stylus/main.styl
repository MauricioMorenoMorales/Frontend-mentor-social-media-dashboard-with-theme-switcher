@import './_tokens.styl'

:root
	--bg #1e202a
	--topBgPattern #1e202a
	--cardBg #252a41
	--desaturatedText #8b97c6
	--text #ffffff


#x1
	background-color BG
#x2
	background-color TopBgPattern
#x3
	background-color CardBg
#x4
	background-color DesaturatedText
#x5
	background-color Text

#theme-switcher
	margin-bottom 10px

.lbl
	display inline-block
	width 65px
	height 33px
	background LightToggle
	border-radius 100px
	cursor pointer
	position relative
	transition .3s

.lbl::after
	content ''
	display block
	width 25px
	height 25px
	background #eee
	border-radius 100px
	position absolute
	top 4px
	left 4px
	transition .3s

#switch:checked + .lbl::after
	left 36px

#switch:checked + .lbl
	background DarkToggle

#switch
	display none